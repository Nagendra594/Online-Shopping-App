<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <div class="orders__item_head">
                                <h1># <%= order._id %></h1>
                                <a href="/orders/<%=order._id%>">Invoice Link</a>
                            </div>
                            <ul class="orders__products">
                                <% order.items.forEach(pro => { %>
                                    <li class="orders__products-item"><%= pro.product.title %> (<%= pro.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>